{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noImplicitAny": false,        // Allow 'any' type explicitly
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,               // Disable strict mode
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/store/userDataStore.ts",
    "src/context/UserContext.jsx",
    "src/app/context/UserContext.js",
    "src/models/User.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
